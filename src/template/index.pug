        script(src='js/scripts.min.js')

    body
      section.coin
        .container
          .coin-header
              h1 Select currency to exhange:
              .coin-select
                <select class='select' id ="currency-list" name="currency">
         
                    <option id="tag_1" value="USD">USD</option>
             
                    <option id="tag_2" value="EUR">EUR</option>
             
                    <option id="tag_3" value="RUB">RUB</option>
                </select>

          .coin-box
            
            .coin-item.coin-item--eth
                h2 Ethereum
                .coin-item-box
                  input#eth.hide(type="checkbox")
                  label.coin-lbl(for='eth') Percent change
                  ul.coin-change-list.coin-change-list-price(data="ETH")
                  ul.coin-change-list.coin-change-list-percent.hide(data="ETH-percent")

            .coin-item.coin-item--ltc
                h2 Litecoin
                .coin-item-box
                  input#ltc.hide(type="checkbox")
                  label.coin-lbl(for='ltc') Percent change
                  ul.coin-change-list.coin-change-list-price(data="LTC")
                  ul.coin-change-list.coin-change-list-percent.hide(data="LTC-percent")
      
            .coin-item.coin-item--btc
                h2 Bitcoin
                .coin-item-box
                  input#btc.hide(type="checkbox")
                  label.coin-lbl(for='btc') Percent change
                  ul.coin-change-list.coin-change-list-price(data="BTC")     
                  ul.coin-change-list.coin-change-list-percent.hide(data="BTC-percent") 


        
